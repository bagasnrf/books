<div class="alert alert-info" id="notice"><%= notice %></div>
<div class="content">

<h1>New Books Catalog</h1>

<div class="row">
<% cache @products do %>
<% @products.each do |product| %>
<% cache product do %>

  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag(product.image_url) %>
      <div class="caption">
        <h3><%= truncate(strip_tags(product.title), length: 50) %></h3>
        <p><%= truncate(strip_tags(product.description), length: 130) %></p>
        <div class="price"><%= number_to_currency(product.price) %></div>
        <%=button_to t('.add_html'), line_items_path(product_id: product, locale: I18n.locale), remote: true %>
      </div>
    </div>
  </div>
<% end %>
<% end %>
<% end %>

</div>
</div>




